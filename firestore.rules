rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Regra de produção básica: Permite leitura e escrita apenas para usuários autenticados.
    // O próximo passo seria adicionar uma tela de login na aplicação.
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}
